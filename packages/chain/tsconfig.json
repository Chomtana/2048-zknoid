{
  "extends": "tsconfig/chain.json",
  "compilerOptions": {
    "outDir": "./dist",
    "strictNullChecks": true,
    "target": "ES2020",
    "module": "ES2022",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "declarationMap": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "lib": ["es2020"]
  },
  "files": ["node_modules/jest-expect-message/types/index.d.ts"],
  "include": ["./src/**/*", "./bin/**/*", "./on_startup_scripts/**/*"],
  "exclude": ["jest.config.cjs"]
}
