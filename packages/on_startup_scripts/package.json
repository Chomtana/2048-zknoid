{
    "name": "on_startup_scripts",
    "version": "1.4.5",
    "type": "module",
    "main": "dist/index.js",
    "watch": {
        "build-and-start": {
            "patterns": [
                "src"
            ],
            "extensions": [
                "*"
            ]
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "pnpm run build && sleep 10 && pnpm run default-comp",
        "default-comp": "pnpm tsx scripts/set-default-competitions.ts",
        "start-server": "sleep 10 && tsc -p tsconfig.json && node --experimental-specifier-resolution=node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads dist/set-default-competitions.js"
    },
    "devDependencies": {
        "o1js": "0.13.1",
        "tsx": "^4.7.0",
        "typescript": "4.9.4"
    },
    "dependencies": {
        "ts-node": "^10.9.2",
        "zknoid-chain-dev": "workspace:^"
    }
}
