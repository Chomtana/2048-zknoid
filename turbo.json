{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "on_startup_scripts#dev": {
      "dependsOn": ["zknoid-chain-dev#build"]
    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "start": {
      "cache": false
    }
  }
}
